{
  "compilerOptions": {
    "declaration": false,
    "target": "es5",
    "removeComments": true,
    "sourceMap": false,
    "module": "commonjs",
    "noEmitOnError": true,
    "jsx": "react",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "dom",
      "es2015",
      "es2015.promise"
    ],
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true
  },
  "include": [
    "app/**/*.tsx"
  ],
  "globals": ["React", "ReactDOM"]
}